{
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks"],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "project": [
        "tsconfig.json"
      ]
    },
    "env": {
      "es2017": true,
      "browser": true,
      "jest": true
    },
    "extends": "htmlacademy/react-typescript",
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  }
